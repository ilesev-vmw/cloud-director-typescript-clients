{
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist/",
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "sourceMap": false,
    "lib": [
      "dom",
      "es5"
    ],
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "dist/**/*",
    "node_modules/**/*"
  ]
}
